<Window x:Class="GUIThreads.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUIThreads"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Loaded="MainWindow_OnLoaded">
    <StackPanel>
        <TextBox x:Name="StopwatchInterval" Height="25"/>
        <TextBlock x:Name="Stopwatch" Height="25"/>
        <Button x:Name="StartButton" Height="25" Content="Start" Click="StartButton_OnClick"/>
    </StackPanel>
</Window>
