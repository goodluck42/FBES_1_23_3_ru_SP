<Window x:Class="TPL_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TPL_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="MainWindow_OnLoaded">
    <StackPanel>
        <TextBlock x:Name="MyTextBlock" Height="25"/>
        <TextBox x:Name="MyTextBox" Height="25"/>
        <ProgressBar x:Name="MyProgressBar" Height="25"/>
    </StackPanel>
</Window>
