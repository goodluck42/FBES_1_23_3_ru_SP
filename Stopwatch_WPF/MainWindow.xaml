<Window x:Class="Stopwatch_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stopwatch_WPF"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800"
        FontSize="20"
        FontFamily="TAHOMA"
        Loaded="MainWindow_OnLoaded">
    <StackPanel>
        <Button x:Name="StartButton" Content="Start" Padding="0 8" Margin="0 0 0 10" Click="StartButton_OnClick"/>
        <Button x:Name="PauseButton" Content="Pause" Padding="0 8" Margin="0 0 0 10" Click="PauseButton_OnClick"/>
        <Button x:Name="StopButton" Content="Stop" Padding="0 8" Margin="0 0 0 10" Click="StopButton_OnClick"/>
        <TextBlock x:Name="StopwatchTextBlock" Padding="0 8" TextAlignment="Center" Margin="0 0 0 10" />
    </StackPanel>
</Window>
